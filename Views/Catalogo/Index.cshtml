@model IEnumerable<SistemaVen.Models.Catalogo>
@{
    ViewData["Title"] = "Catalogo";
}

<h1>@ViewData["Title"]</h1>
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions text-center">
                    <img class="img-responsive" width="200" height="250"
                       src="/img/@item.ImageName" alt="@item.ImageName"  />
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.Precio)</p>
                  <a class="btn btn-primary first" asp-action="Add" asp-route-id="@item.Id">AGREGAR</a>
                  <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">DETALLES</a>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>