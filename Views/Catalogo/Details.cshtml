@model SistemaVen.Models.Catalogo;
@{
    ViewData["Title"] = "Detalles del Producto";
}

<form asp-controller="Catalogo" asp-action="Add">
    <h1>Detalles</h1>
    <div class="container">
        <div class="col-sm-4">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="card-img-actions">
                        <img class="img-responsive" width="200" height="250"
                            src="/img/@Html.DisplayFor(model => model.ImageName)"
                            alt="@Html.DisplayFor(model => model.ImageName)" />
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Descripcion)</p>
                    <p class="card-text">@Html.DisplayFor(model => model.Talla)</p>
                    <h5 class="card-title">@Html.DisplayFor(model => model.Precio)</h5>
                    <a class="btn btn-primary" asp-action="Add" asp-route-id="@Model.Id">AGREGAR</a>
                    <a class="btn btn-primary" asp-action="Catalogo">REGRESAR</a>
                </div>
            </div>
        </div>
    </div>
</form>
